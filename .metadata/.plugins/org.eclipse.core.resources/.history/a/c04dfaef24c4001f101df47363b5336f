package loopstatment;

public class PatternDemo {

	public static void main(String[] args) {
		
		int count = 0;
		for(int i = 1; i <= 8; i++)
		{
			if(i%2 != 0)
			{
				for(int j = 1; j <= 5; j++)
				{
					count = count++;
					System.out.println(count+ " ");
				}
			}
			else
			{
				int temp = count ++;
				for(int j = count+5; j >= temp; j--)
				{
					count = count++;
					System.out.println(j + "");
				}
			}
			System.out.println();
		}
	}

}
